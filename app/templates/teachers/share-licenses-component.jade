#share-licenses-component.modal-body 
  .text-center
    p.small
      {{ $t("share_licenses.subheader") }}
  
  h4.m-t-5
    {{ $t("share_licenses.add_teacher_label") }}
  
  .row
    .col-xs-8
      input(v-model:value="teacherSearchInput")
    .col-xs-4
      button.btn.btn-navy(v-on:click="findTeacher")
        span.m-l-1.m-r-1
          {{ $t("share_licenses.add_teacher_button") }}
  
  h4.m-t-5
    {{ $t("share_licenses.teachers_using_these") }}
  
  div.m-b-5
    li( is="share-licenses-joiner-row",
        v-for="joiner in prepaid.joiners",
        :key="joiner.email",
        :joiner="joiner",
        :prepaid="prepaid")
  
  .text-center
    p.small
      {{ $t("share_licenses.footer") }}
  
    button.btn.btn-lg.btn-navy-alt
      span.m-l-3.m-r-3
        {{ $t("general.close_window") }}
